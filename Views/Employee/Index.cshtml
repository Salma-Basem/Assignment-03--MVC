@using Company.Data.Models

@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
@if(Model.Count()>0)
{
<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(d=>d.Code)</th>
            <th> @Html.DisplayNameFor(d => d.Name)</th>
            <th> @Html.DisplayNameFor(d => d.Createatd)</th>
                <th>details</th>
                <th>update</th>
                <th>delete</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var d in Model)
            {
                <tr>
                    <td>d.Code</td>
                    <td>d.Name</td>
                    <td>d.CreateAt</td>
                    <a asp-action="Details" asp-route-id="department.Id">
                            details

                    </a>

                    <a asp-action="Update" asp-route-id="department.Id">
                        update

                    </a>

                    <a asp-action="Delete" asp-route-id="department.Id ">
                        delete

                    </a>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class=" text-danger">There is no departments</h3>
}